<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="410.0" prefWidth="718.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.reservationsystem.controllers.PaymentGuestController">
    <children>
        <!-- Navigation Bar -->
        <Button fx:id="bookingBtn" layoutX="0.0" layoutY="0.0" mnemonicParsing="false" onAction="#handleBookingGuest" prefHeight="66.0" prefWidth="145.0" text="Booking" />
        <Button fx:id="roomSelectionBtn" layoutX="145.0" layoutY="0.0" mnemonicParsing="false" onAction="#handleRoomSelectionGuest" prefHeight="66.0" prefWidth="145.0" text="Room Selection" />
        <Button fx:id="reservationBtn" layoutX="290.0" layoutY="0.0" mnemonicParsing="false" onAction="#handleReservationGuest" prefHeight="66.0" prefWidth="145.0" text="Reservation" />
        <Button fx:id="paymentBtn" layoutX="435.0" layoutY="0.0" mnemonicParsing="false" onAction="#handlePaymentGuest" prefHeight="66.0" prefWidth="145.0" style="-fx-background-color: lightblue;" text="Payment Detail" />
        <Button fx:id="exitBtn" layoutX="580.0" layoutY="0.0" mnemonicParsing="false" onAction="#handleExitAdmin" prefHeight="66.0" prefWidth="138.0" text="Exit" />

        <!-- Title -->
        <Label layoutX="14.0" layoutY="66.0" styleClass="title" text="Payment Details">
            <font>
                <Font name="Arial Bold" size="24.0" />
            </font>
        </Label>

        <!-- Guest Details -->
        <Label layoutX="120.0" layoutY="107.0" styleClass="subtitle" text="Guest Details">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label layoutX="32.0" layoutY="150.0" text="Name:" />
        <Label fx:id="nameLabel" layoutX="120.0" layoutY="150.0" prefWidth="200.0" />
        <Label layoutX="32.0" layoutY="180.0" text="Phone Number:" />
        <Label fx:id="phoneLabel" layoutX="120.0" layoutY="180.0" prefWidth="200.0" />
        <Label layoutX="32.0" layoutY="210.0" text="Email:" />
        <Label fx:id="emailLabel" layoutX="120.0" layoutY="210.0" prefWidth="200.0" />

        <!-- Reservation Details -->
        <Label layoutX="468.0" layoutY="107.0" styleClass="subtitle" text="Reservation Details">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label layoutX="350.0" layoutY="150.0" text="Check-in:" />
        <Label fx:id="checkInLabel" layoutX="420.0" layoutY="150.0" prefWidth="200.0" />
        <Label layoutX="350.0" layoutY="180.0" text="Check-out:" />
        <Label fx:id="checkOutLabel" layoutX="420.0" layoutY="180.0" prefWidth="200.0" />
        <Label layoutX="350.0" layoutY="210.0" text="Guests:" />
        <Label fx:id="guestsLabel" layoutX="420.0" layoutY="210.0" prefWidth="200.0" />
        <Label layoutX="350.0" layoutY="240.0" text="Room:" />
        <Label fx:id="roomLabel" layoutX="420.0" layoutY="240.0" prefWidth="200.0" />

        <!-- Payment Details -->
        <Label layoutX="98.0" layoutY="257.0" styleClass="subtitle" text="Payment Summary">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label layoutX="32.0" layoutY="290.0" text="Room Price:" />
        <Label fx:id="roomPriceLabel" layoutX="120.0" layoutY="290.0" prefWidth="200.0" />
        <Label layoutX="32.0" layoutY="320.0" text="Tax (13%):" />
        <Label fx:id="taxLabel" layoutX="120.0" layoutY="320.0" prefWidth="200.0" />
        <Label layoutX="32.0" layoutY="350.0" text="Total Amount:" />
        <Label fx:id="totalLabel" layoutX="120.0" layoutY="350.0" prefWidth="200.0" />

        <!-- Action Button -->
        <Button fx:id="payOnlineBtn" layoutX="275.0" layoutY="367.0" mnemonicParsing="false" onAction="#handlePayOnline" prefHeight="25.0" prefWidth="150.0" text="Pay Online" />
    </children>
</Pane>
