<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="410.0" prefWidth="718.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.reservationsystem.controllers.ReservationGuestController">
    <children>
        <!-- Navigation Bar -->
        <Button fx:id="bookingBtn" layoutX="0.0" layoutY="0.0" mnemonicParsing="false" onAction="#handleBookingGuest" prefHeight="66.0" prefWidth="145.0" text="Booking" />
        <Button fx:id="roomSelectionBtn" layoutX="145.0" layoutY="0.0" mnemonicParsing="false" onAction="#handleRoomSelectionGuest" prefHeight="66.0" prefWidth="145.0" text="Room Selection" />
        <Button fx:id="reservationBtn" layoutX="290.0" layoutY="0.0" mnemonicParsing="false" onAction="#handleReservationGuest" prefHeight="66.0" prefWidth="145.0" style="-fx-background-color: lightblue;" text="Reservation" />
        <Button fx:id="paymentBtn" layoutX="435.0" layoutY="0.0" mnemonicParsing="false" onAction="#handlePaymentGuest" prefHeight="66.0" prefWidth="145.0" text="Payment Detail" />
        <Button fx:id="exitBtn" layoutX="580.0" layoutY="0.0" mnemonicParsing="false" onAction="#handleExitAdmin" prefHeight="66.0" prefWidth="138.0" text="Exit" />

        <!-- Title -->
        <Label layoutX="14.0" layoutY="66.0" styleClass="title" text="Your Reservation">
            <font>
                <Font name="Arial Bold" size="24.0" />
            </font>
        </Label>

        <!-- Guest Details -->
        <Label layoutX="32.0" layoutY="107.0" styleClass="subtitle" text="Guest Details">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label layoutX="15.0" layoutY="150.0" text="Name:" />
        <Label fx:id="nameLabel" layoutX="120.0" layoutY="150.0" prefWidth="200.0" />
        <Label layoutX="15.0" layoutY="197.0" text="Phone Number:" />
        <Label fx:id="phoneLabel" layoutX="120.0" layoutY="202.0" prefWidth="200.0" />
        <Label layoutX="17.0" layoutY="249.0" text="Email:" />
        <Label fx:id="emailLabel" layoutX="120.0" layoutY="249.0" prefWidth="200.0" />

        <!-- Reservation Details -->
        <Label layoutX="344.0" layoutY="107.0" styleClass="subtitle" text="Reservation Details">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label layoutX="350.0" layoutY="150.0" text="Check-in:" />
        <Label fx:id="checkInLabel" layoutX="449.0" layoutY="150.0" prefWidth="200.0" />
        <Label layoutX="346.0" layoutY="197.0" text="Check-out:" />
        <Label fx:id="checkOutLabel" layoutX="441.0" layoutY="197.0" prefWidth="200.0" />
        <Label layoutX="350.0" layoutY="240.0" text="Guests:" />
        <Label fx:id="guestsLabel" layoutX="441.0" layoutY="241.0" prefWidth="200.0" />
        <Label layoutX="352.0" layoutY="283.0" text="Room:" />
        <Label fx:id="roomLabel" layoutX="433.0" layoutY="283.0" prefWidth="200.0" />

        <!-- Action Buttons -->
        <Button fx:id="modifyBookingBtn" layoutX="101.0" layoutY="359.0" mnemonicParsing="false" onAction="#handleModifyBooking" prefHeight="25.0" prefWidth="150.0" text="Modify Booking" />
        <Button fx:id="proceedToPaymentBtn" layoutX="433.0" layoutY="359.0" mnemonicParsing="false" onAction="#handlePaymentGuest" prefHeight="25.0" prefWidth="150.0" text="Proceed to Payment" />
    </children>
</Pane>
